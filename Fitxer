/**
* Classe Professors
* @author Albert Frau
* @version 0.2
*/
public class Professors extends Persona {

private String salari;
private String curs;
/**
* Constructor mitjançant parametres
* @param nom
* @param llinatges
* @param salari
* @param curs
*/
public Professors(){
super ();
}
/**
*
* @param nom
* @param llinatges
* @param edat
* @param telefon
* @param salari
* @param curs
*/
public Professors(String nom, String llinatges, byte edat, String telefon, String salari, String curs) {
super(nom, llinatges, edat, telefon);
this.salari = salari;
this.curs = curs;
}
public String getSalari() {
return salari;
}
/**
* Mètode per insertar el salari del professor
* @param assignatura
* @param salari
*/
public void setAssignatura(String assignatura, String salari) {
this.salari = salari;
}

public String getCurs() {
return curs;
}
/**
* Mètode per insertar el curs del professor
* @param curs
*/
public void setCurs(String curs) {
this.curs = curs;
}
public String toString(){
return "Nom: " + getNom() + "\n" +
"Llinatges" + getLlinatges() + "\n" +
"Edat" + getEdat() + "\n" +
"Telefon" + getEdat() + "\n" +
"Salari" + this.salari + "\n" +
"Curs" + this.curs + "\n" +
"----------------------------------\n";
}
}
